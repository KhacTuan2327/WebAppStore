@using Models
@{
    ViewBag.Title = "UpdateStaff";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<head>
    <title>Nhân viên | Quản trị Admin</title>
</head>
<body class="app sidebar-mini rtl">
    <main class="app-content">
        <div class="app-title">
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item"><a href="#">Sửa thông tin nhân viên</a></li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <h3 class="tile-title">Thông tin sản phẩm</h3>
                    <div class="tile-body">
                        <div class="row element-button">
                        </div>
                        @*<form class="row" action="/Admin/Staff/UpdateStafflast" method="get">*@
                        @using (Html.BeginForm("UpdateStafflast", "Staff", FormMethod.Post, new { enctype = "multipart/form-data", id = "form1" }))
                        {
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label class="control-label">ID nhân viên</label>
                                    <input name="id" class="form-control" type="text" value="@Model.MaNhanVien">
                                </div>

                                <div class="form-group col-md-4">
                                    <label class="control-label">Họ và tên</label>
                                    <input name="name" class="form-control" type="text" value="@Model.HoTen">
                                </div>

                                <div class="form-group col-md-4">
                                    <label class="control-label">Ngày sinh</label>
                                    <input name="dateofbirth" class="form-control" type="datetime" value="@Model.NgaySinh">
                                </div>

                                <div class="form-group col-md-4">
                                    <label class="control-label">Địa chỉ</label>
                                    <input name="address" class="form-control" type="text" value="@Model.DiaChi">
                                </div>

                                <div>
                                    <label class="control-label">Giới tính</label>
                                    <select name="gender" class="form-control" id="exampleSelect2" value="@Model.GioiTinh">
                                        <option>Nam</option>
                                        <option>Nữ</option>
                                    </select>
                                </div>

                                <div class="form-group  col-md-4">
                                    <label class="control-label">Số điện thoại</label>
                                    <input name="phone" class="form-control" type="number" value="@Model.SDT">
                                </div>

                                <div class="form-group col-md-3">
                                    <label class="control-label">Chức vụ</label>
                                    <select name="position" class="form-control" id="exampleSelect2" value="@Model.Chucvu">
                                        <option>Quản lý</option>
                                        <option>Bán hàng</option>
                                        <option>Tư vấn</option>
                                        <option>Dịch vụ</option>
                                        <option>Thu Ngân</option>
                                        <option>Bảo trì</option>
                                        <option>Kiểm hàng</option>
                                        <option>Bảo vệ</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-12">
                                    <label class="control-label">Ảnh 3x4 nhân viên</label>
                                    <div id="myfileupload">
                                        <input type="file" id="uploadfile" name="photo" onchange="readURL(this);" />
                                    </div>
                                    <div id="thumbbox">
                                        <img height="300" width="300" alt="Thumb image" id="thumbimage" style="display: none" />
                                        <a class="removeimg" href="javascript:"></a>
                                    </div>
                                    <div id="boxchoice">
                                        <a href="javascript:" class="Choicefile"><i class='bx bx-upload'></i></a>
                                        <p style="clear:both"></p>
                                    </div>
                                </div>
                                <div>
                                    <button class="btn btn-save" type="submit">Lưu lại</button>
                                    <a class="btn btn-cancel" href="~/Admin/Staff/Staff">Hủy bỏ</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="~/Areas/Admin/content/doc/js/jquery-3.2.1.min.js"></script>
    <script src="~/Areas/Admin/content/doc/js/popper.min.js"></script>
    <script src="~/Areas/Admin/content/doc/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/content/js/main.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="~/Areas/Admin/content/doc/js/plugins/pace.min.js"></script>
</body>
