@using Models
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<head>
    <title>Sản phẩm | Quản trị Admin</title>
    <script>
    </script>
</head>
<body class="app sidebar-mini rtl">
    <main class="app-content">
        <div class="app-title">
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item"><a href="#">Thêm sản phẩm</a></li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <h3 class="tile-title">Tạo mới sản phẩm</h3>
                    <div class="tile-body">
                        <div class="row element-button">
                        </div>
                        @*<form class="row" action="/Admin/Product/AddProduct1" method="post">*@
                        @using (Html.BeginForm("AddProduct1", "Product", FormMethod.Post, new { enctype = "multipart/form-data", id = "form1" }))
                        {
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label class="control-label">Mã sản phẩm </label>
                                    <input name="id" class="form-control" type="number" placeholder="">
                                </div>

                                <div class="form-group col-md-3">
                                    <label class="control-label">Tên sản phẩm</label>
                                    <input name="title" class="form-control" type="text">
                                </div>

                                <div class="form-group  col-md-3">
                                    <label class="control-label">Danh mục</label>
                                    <select name="category_id" class="form-control" id="exampleSelect1">
                                        <option>-- Chọn danh mục --</option>
                                        @using (var con = new StoreDbContext())
                                        {
                                            var db = (from s in con.Categories
                                                      select s).ToList();
                                            foreach (var item in db)
                                            {
                                                <option value="@item.Id">@item.Name></option>
                                            }
                                        }
                                    </select>
                                </div>

                                <div class="form-group col-md-3 ">
                                    <label for="exampleSelect1" class="control-label">Size</label>
                                    <select name="size" class="form-control" id="exampleSelect1">
                                        <option>-- Chọn size --</option>
                                        <option>S</option>
                                        <option>M</option>
                                        <option>L</option>
                                        <option>XL</option>
                                        <option>XXL</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-3 ">
                                    <label for="exampleSelect1" class="control-label">Màu</label>
                                    <select name="color" class="form-control" id="exampleSelect1">
                                        <option>-- Chọn size --</option>
                                        <option>Trắng</option>
                                        <option>Nâu</option>
                                        <option>Ghi</option>
                                        <option>Đen</option>
                                        <option>Xám </option>
                                        <option>Vàng</option>
                                        <option>Đỏ</option>
                                        <option>Cam</option>
                                        <option>Tím</option>
                                    </select>
                                </div>

                                <div class="form-group  col-md-3">
                                    <label class="control-label">Số lượng</label>
                                    <input name="quantity" class="form-control" type="number">
                                </div>

                                <div class="form-group col-md-3">
                                    <label class="control-label">Giá bán</label>
                                    <input name="price" class="form-control" type="text">
                                </div>

                                <div class="form-group col-md-12">
                                    <label name="photo" class="control-label">Ảnh sản phẩm</label>
                                    <div id="myfileupload">
                                        <input type="file" id="uploadfile" name="photo" onchange="readURL(this);" />
                                    </div>
                                    <div id="thumbbox">
                                        <img height="450" width="400" alt="Thumb image" id="thumbimage" style="display: none" />
                                        <a class="removeimg" href="javascript:"></a>
                                    </div>
                                    <div id="boxchoice">
                                        <a href="javascript:" class="Choicefile"><i class="fas fa-cloud-upload-alt"></i> Chọn ảnh</a>
                                        <p style="clear:both"></p>
                                    </div>
                                </div>

                                <div class="form-group col-md-12">
                                    <label class="control-label">Mô tả sản phẩm</label>
                                    <textarea class="form-control" name="description" id="mota"></textarea>
                                    <script>CKEDITOR.replace('mota');</script>
                                </div>
                                <div>
                                    <button class="btn btn-save" type="submit">Lưu lại</button>
                                    <a class="btn btn-cancel" href="~/Admin/Product/Product">Hủy bỏ</a>
                                </div>
                            </div>
                            @*</form>*@
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="~/Areas/Admin/content/doc/js/jquery-3.2.1.min.js"></script>
    <script src="~/Areas/Admin/content/doc/js/popper.min.js"></script>
    <script src="~/Areas/Admin/content/doc/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/content/js/main.js"></script>
    <script src="~/Areas/Admin/content/doc/js/plugins/pace.min.js"></script>
    <script>
    </script>
</body>






