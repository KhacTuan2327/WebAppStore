<script>
    function getInfBlog(id) {

        $.ajax({
            type: "POST",
            data: { id: id },
            url: "/Blog/getInfBlog",

            success: function (data) {
                $('.title').html(data.Title)
                $('.price').html(data.Price)
                $('.description').html(data.Description)
                $('.img').attr("src", `../../Content/images/Image/Blog/${data.Photo}`)
                $('.size_product').val(data.Size)

            },
            error: function (data) {
            }

        })
    };
</script>
